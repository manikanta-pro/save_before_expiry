extends layout

block content
  section.auth-page
    .auth-card
      .auth-header
        h2 Welcome Back
        p Login to continue saving food before expiry

      if errorMessage
        .alert-error= errorMessage

      form.auth-form(action="/authenticate", method="post")
        .input-group
          label(for="email") Email
          input#email(
            type="email",
            name="email",
            placeholder="you@example.com",
            required
          )

        .input-group
          label(for="password") Password
          input#password(
            type="password",
            name="password",
            placeholder="••••••••",
            required
          )

        button.btn-primary.btn-full(type="submit") Login

      .auth-footer
        span Don’t have an account?
        a(href="/signup") Create account
