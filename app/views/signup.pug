extends layout

block content
  section.auth-page
    .auth-card
      .auth-header
        h2 Create Account
        p Join us and help reduce food waste

      if errorMessage
        .alert-error= errorMessage

      if successMessage
        .alert-success= successMessage

      form.auth-form(action="/set-password", method="post")
        .input-group
          label(for="businessName") Business Name
          input#businessName(
            type="text",
            name="businessName",
            placeholder="Store or business name"
          )

        .form-row
          .input-group
            label(for="forename") First Name
            input#forename(
              type="text",
              name="forename",
              placeholder="First name",
              required
            )

          .input-group
            label(for="surname") Last Name
            input#surname(
              type="text",
              name="surname",
              placeholder="Last name",
              required
            )

        .input-group
          label(for="email") Email Address
          input#email(
            type="email",
            name="email",
            placeholder="you@example.com",
            required
          )

        .input-group
          label(for="contactNumber") Contact Number
          input#contactNumber(
            type="text",
            name="contactNumber",
            placeholder="+44 7xxxxxxx"
          )

        .input-group
          label(for="password") Password
          input#password(
            type="password",
            name="password",
            placeholder="Create a strong password",
            required
          )

        button.btn-primary.btn-full(type="submit") Sign Up

      .auth-footer
        span Already have an account?
        a(href="/login") Login here
